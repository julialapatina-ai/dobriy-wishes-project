<script>
    const wishes = [
        "Похвалите коллегу за достижения. Слова заряжают сильнее витаминов.",
        "Сделайте паузу и скажите комплимент — добро передаётся быстрее витамина С.",
        "Поблагодарите коллегу за помощь — даже маленькую.",
        "Подарите внимание — это работает лучше любого витаминного микса.",
        "Сделайте доброе дело — оно поддерживает команду не хуже витаминов."
    ];

    const randomWish = wishes[Math.floor(Math.random() * wishes.length)];
    document.getElementById("wish").textContent = randomWish;
</script>

